<ul class="pagination">
    <li {% if page > 1 %}class="active"{% else %} class="disabled"{% endif %}>
        <a {% if page > 1 %}href="{{ path('wibellule_blog_homepage', {'page': page - 1}) }}"{% endif %}>
            <i class="material-icons waves-effect">chevron_left</i>
        </a>
    </li>
    {% for p in range(1, nbPerPage) %}
        <li {% if p == page %}class="active default_color"{% endif %}>
            <a href="{{ path('wibellule_blog_homepage', {'page': p}) }}">{{ p }}</a>
        </li>
    {% endfor %}
    <li {% if page < nbPerPage %}class="active"{% else %} class="disabled"{% endif %}>
        <a {% if page < nbPerPage %}href="{{ path('wibellule_blog_homepage', {'page': page + 1}) }}"{% endif %}>
            <i class="material-icons waves-effect">chevron_right</i>
        </a>
    </li>
</ul>